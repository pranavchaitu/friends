generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  male
  female
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  about String?
  gender Gender?
  hobbies String[]
  images String[]
  sentLikes User[] @relation("LikeRelation")
  receivedLikes User[] @relation("LikeRelation")
}